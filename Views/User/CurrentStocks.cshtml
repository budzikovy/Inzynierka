@model IEnumerable<Inz_Fn.Models.Stock>

<div class="container">
    <h2>My Stocks</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>CIK</th>
                <th>Price per Stock</th>
                <th>Date</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stock in Model)
            {
                <tr>
                    <td>@stock.Stock_CIK</td>
                    <td>@stock.Price_per_stock.ToString("C")</td>
                    <td>@stock.Date.ToShortDateString()</td>
                    <td>@stock.Amount</td>
                    <td>
                        <form asp-action="SellStock" method="post">
                            <input type="hidden" name="id" value="@stock.Id" />
                            <button type="submit" class="btn btn-danger">Sell</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>