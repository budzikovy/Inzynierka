@using Microsoft.AspNetCore.Identity
@using Inz_Fn.Areas.Identity.Data

@inject SignInManager<Inz_FnUser> SignInManager
@inject UserManager<Inz_FnUser> UserManager

<ul class="navbar-nav align-items-md-center">
@if (SignInManager.IsSignedIn(User))
{

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white blue-hover no-dropdown-icon" href="#" id="navbarDropdownMenuLink" role="button"
               data-bs-toggle="dropdown" aria-expanded="false">
                @UserManager.GetUserName(User) <img src="~/images/icons/profileicon.svg" width="30px" height="30px" alt="Your Stocks" class="ms-2" />
            </a>

            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <a id="manage" class="btn btn-link text-white dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Twój profil</a>
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class=" btn btn-link text-white dropdown-item">Wyloguj się</button>
                </form>
            </ul>
        </li>
}
else
{

    <li class="nav-item">
        <a class=" btn btn100 nav-link text-white blue-hover mx-md-2" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
        <li class="nav-item">
            <a class="btn btn100 btn-primary bg-blue bor-white blue-hover blue-hover-btn" id="register" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
    </li>
}
</ul>
