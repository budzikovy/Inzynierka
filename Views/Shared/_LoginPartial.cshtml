@using Microsoft.AspNetCore.Identity
@using Inz_Fn.Areas.Identity.Data

@inject SignInManager<Inz_FnUser> SignInManager
@inject UserManager<Inz_FnUser> UserManager

<ul class="navbar-nav align-items-center">
@if (SignInManager.IsSignedIn(User))
{

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white blue-hover" href="#" id="navbarDropdownMenuLink" role="button"
               data-bs-toggle="dropdown" aria-expanded="false">
                <img src="~/images/icons/profileicon.svg" width="30px" height="30px" alt="Your Stocks" />
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Your Profile</a>
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-white">Logout</button>
                </form>
            </ul>
        </li>
}
else
{

    <li class="nav-item">
        <a class="nav-link text-white " id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
        <li class="nav-item">
            <a class="btn btn-primary blue-button form-control pxy-2" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
}
</ul>
